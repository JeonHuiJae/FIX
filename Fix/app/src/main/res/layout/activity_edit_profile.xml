<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPowder"
    tools:context=".EditProfileActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:background="@color/colorMint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y55">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/colorPowder"
                    android:gravity="center"
                    android:text="XYLOPHONE HOUSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <LinearLayout
                android:background="@color/colorDarkMint"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="@dimen/y10">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:paddingLeft="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> Edit Photo"/>

                <ImageView
                    android:onClick="editPhoto"
                    android:id="@+id/profilePhotoInput"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#eeeeee"
                    android:layout_width="@dimen/x130"
                    android:layout_height="@dimen/y130"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:paddingLeft="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="> Edit Profile Message"/>
                <EditText
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/profileMessageInput"
                    android:text=""
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:textSize="20dp"
                    android:layout_height="@dimen/y50" />

            </LinearLayout>

            <Button
                android:onClick="saveProfile"
                android:layout_marginTop="10dp"
                android:text="SAVE"
                android:textColor="@color/colorPowder"
                android:textSize="22dp"
                android:background="@drawable/mainbtn2"
                android:layout_width="@dimen/x260"
                android:layout_height="@dimen/y70"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorMint"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:gravity="center|right"
            android:layout_height="@dimen/y50">
            <Button
                android:onClick="logout"
                android:background="@color/trans"
                android:text="TOUCH HERE TO LOGOUT"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>