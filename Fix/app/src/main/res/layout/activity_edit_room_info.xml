<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditRoomInfoActivity"
    android:orientation="vertical"
    android:background="@color/colorPowder">

    <ImageView
        android:id="@+id/newPhoto"
        android:layout_width="270dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:background="@color/colorCream"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="방 사진 수정"
        android:onClick="editPhoto"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/mainbtn1"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPowder"/>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/newPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="수정"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/mainbtn2"
            android:textColor="@color/colorPowder"/>

    </LinearLayout>

    <Button
        android:text="저장"
        android:onClick="save"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@drawable/mainbtn3"/>

</LinearLayout>