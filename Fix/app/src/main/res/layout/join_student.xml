<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:visibility="gone"
        android:background="@drawable/test"
        android:id="@+id/second"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:gravity="top"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <TextView
        android:layout_gravity="center"
        android:text="이메일 인증"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="이메일 입력"
            android:inputType="textEmailAddress"
            android:textSize="15dp" />
        <Button
            android:id="@+id/btn_email"
            android:onClick="sendEmail"
            android:text="인증보내기"
            android:layout_width="90dp"
            android:layout_height="50dp" />
    </LinearLayout>


</LinearLayout>

            <TextView
                android:text="신분증 인증"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imageview"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="130dp" />
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="takePhoto"
                    android:text="사진찍기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:onClick="loadPhote"
                    android:text="앨범에서 불러오기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/next2"
            android:text="가입완료"
            android:textSize="20dp"
            android:onClick="studentJoinSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--                               1 번                                -->
    <LinearLayout
        android:visibility="gone"
        android:background="@drawable/test"
        android:id="@+id/first"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="10dp"
            android:text="아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editId"
            android:textSize="16dp"
            android:inputType="text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="ID 입력하세요." />
        <Button
            android:onClick="checkID"
            android:text="중복확인"
            android:textSize="10dp"
            android:layout_width="80dp"
            android:layout_height="45dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="10dp"
            android:text="비밀번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editPw1"
            android:textSize="14dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="8자리(숫자, 영문 조합)" />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginRight="10dp"
            android:text="비밀번호 재입력"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editPw2"
            android:textSize="14dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="다시 입력해주세요" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="이름"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editName"
            android:textSize="15dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="이름을 입력하세요." />

    </LinearLayout>


    <RadioGroup

        android:id="@+id/genderGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="성별"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:text="여성"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RadioButton
            android:id="@+id/maleButton"
            android:text="남성"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="주소"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editAddress"
            android:textSize="14dp"
            android:inputType="text"
            android:hint="주소를 입력하세요."
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="search"
            android:text="검색"
            android:layout_width="70dp"
            android:layout_height="40dp" />

    </LinearLayout>
    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/editAddress2"
        android:textSize="14dp"
        android:hint="상세주소 입력"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="특이사항"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/smokeCheck"
                    android:text="흡연자"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/curfewCheck"
                    android:text="통금"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/petCheck"
                    android:text="반려동물"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/helpCheck"
                    android:text="도움 주기"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="그 외특이사항"
            android:maxLines="2"
            android:inputType="textMultiLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editUniqueness"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>

        <Button
            android:id="@+id/next1"
            android:text="다음"
            android:textSize="20dp"
            android:onClick="next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--                           0번째 (동의)                             -->

    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/test"
        android:id="@+id/zero"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="15dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="개인정보 제공 및 활용 동의서"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/agreeOk"
            android:text="@string/agreement"
            android:textSize="10dp"
            android:scrollbars="vertical"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/colorMint"
            android:layout_width="270dp"
            android:layout_height="300dp" />
        <CheckBox
            android:id="@+id/agree"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="동의하겠습니다."
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/next0"
            android:onClick="next"
            android:layout_gravity="center"
            android:text="다음으로"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>