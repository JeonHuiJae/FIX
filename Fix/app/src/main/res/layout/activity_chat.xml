<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hhj73.fix.ChatActivity"
    android:orientation="vertical"
    android:gravity="bottom">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorDarkMint"
        android:layout_height="65dp">
        <FrameLayout
            android:background="@color/colorMint"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <!--뒤로가기 버튼-->
            <Button
                android:onClick="back"
                android:text="◀"
                android:layout_gravity="center|left"
                android:background="#00ff0000"
                android:textColor="@color/colorBrightMint"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/roomName"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/colorPowder"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--계약서 버튼-->
            <Button
                android:onClick="contractLayoutBtn"
                android:text="계약"
                android:layout_gravity="center|right"
                android:background="@color/colorDarkMint"
                android:textColor="@color/colorPowder"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </FrameLayout>
    </LinearLayout>



    <!--<ListView-->
        <!--android:background="@color/colorPowder"-->
        <!--android:id="@+id/chatList"-->
        <!--android:transcriptMode="alwaysScroll"-->
        <!--android:layout_weight="7"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp">-->
    <!--</ListView>-->

    <ListView

        android:background="@color/colorPowder"
        android:id="@+id/chatList"
        android:transcriptMode="alwaysScroll"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>

    <LinearLayout
        android:background="@color/colorMint"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <EditText
           android:nextFocusDown="@id/send"
            android:layout_gravity="center"
            android:background="@color/colorPowder"
            android:id="@+id/chatText"
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/send"
            android:text="SEND"
            android:layout_gravity="center"
            android:textColor="@color/colorPowder"
            android:background="@color/colorPink"
            android:layout_marginRight="5dp"
            android:onClick="submit"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>

    <!--계약서 레이아웃 학생용-->
    <FrameLayout
        android:id="@+id/contractLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:background="#00ff0000"
            android:onClick="backChat"
            android:layout_width="40dp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:background="@color/colorDarkMint"
            android:layout_width="290dp"
            android:layout_gravity="right|bottom"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:id="@+id/urProfile"
                    android:layout_gravity="center|bottom"
                    android:background="@color/colorPowder"
                    android:layout_width="100dp"
                    android:layout_marginBottom="6dp"
                    android:layout_height="100dp" />

                <!--전화걸기-->
                <Button
                    android:onClick="call"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="bottom|right"
                    android:text="call"
                    android:textSize="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
            </FrameLayout>
            <TextView
                android:id="@+id/UrName"
                android:gravity="center"
                android:textColor="#dddddd"
                android:text="Student Soonja Kim"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@color/colorMint"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="400dp">
                <TextView
                    android:text="CONTRACT"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPowder"
                    android:background="@drawable/mainbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="43dp" />

                <!--수정요청 버튼-->
                <Button
                    android:background="@drawable/mainbtn1"
                    android:text="계약서 내용 추가/변경"
                    android:textColor="@color/colorPowder"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="250dp"
                    android:layout_height="43dp" />

                <!--계약 리스트 들어갈 부분-->
                <ListView
                    android:id="@+id/detailContractList"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>

                <!--제출버튼-->
                <Button
                    android:onClick="contractSubmit"
                    android:background="@drawable/mainbtn2"
                    android:textSize="20dp"
                    android:text="제출 요청하기"
                    android:textColor="@color/colorPowder"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
