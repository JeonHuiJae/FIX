    android:layout_height="wrap_content"
    android:background="@drawable/test"
    android:orientation="vertical">



    <!--                             7번째 (그 외 특이사항)                                -->
    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/test"
        android:id="@+id/seventh"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center"
            android:text="그 외 특이사항"
            android:textSize="25dp"
            android:background="@color/colorAccent"
            android:padding="3dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="입주자가 알았으면 하는 특이사항을 적어주세요!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@color/colorMint"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:layout_width="280dp"
            android:layout_height="200dp" />
        <Button
            android:id="@+id/next7"
            android:onClick="seniorJoinSuccess"
            android:layout_gravity="center"
            android:text="가입 완료"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--                             6번째 (특이사항)                                -->
    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/test"
        android:id="@+id/sixth"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:padding="10dp"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="특이사항 체크"
            android:textSize="25dp"
            android:background="@color/colorAccent"
            android:padding="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="*해당되시면 체크해주세요!*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_marginBottom="10dp"
                android:id="@+id/smokeCheck"
                android:textSize="22dp"
                android:text="흡연자에요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginBottom="10dp"
                android:id="@+id/curfewCheck"
                android:textSize="22dp"
                android:text="통금이 있는게 좋을것 같아요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:layout_marginBottom="10dp"
                android:id="@+id/petCheck"
                android:textSize="22dp"
                android:text="반려동물이 있어요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_marginBottom="10dp"
                android:id="@+id/helpCheck"
                android:textSize="22dp"
                android:text="도움을 줬으면 좋겠어요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/next6"
            android:onClick="next"
            android:layout_gravity="center"
            android:text="다음으로"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!--                             5번째 (신분증 인증)                                -->

